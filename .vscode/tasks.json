// Available variables which can be used inside of strings.
// ${workspaceRoot}: the root folder of the team
// ${file}: the current opened file
// ${fileBasename}: the current opened file's basename
// ${fileDirname}: the current opened file's dirname
// ${fileExtname}: the current opened file's extension
// ${cwd}: the current working directory of the spawned process
{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "CHECK CRATES DEPENDENCIES",
			"type": "shell",
			"group": "build",
			"isBackground": true,
			"command": "cargo +nightly udeps --manifest-path ./crates/Cargo.toml --all-targets",
			"presentation": {
				"clear": true,
				"reveal": "silent", //process does not switch terminal (focus on program output)
			}
		},
		{
			"label": "RUN CLIPPY",
			"group": "build",
			"isBackground": true,
			"dependsOn": [
				"CLIPPY CHECK",
			],
			"problemMatcher": [],
			"presentation": {
				"clear": true,
				"reveal": "silent", //process does not switch terminal (focus on program output)
			}
		},
		{
			"label": "CLIPPY FIX",
			"type": "shell",
			"isBackground": true,
			"command": "cargo clippy --manifest-path ./crates/Cargo.toml --no-deps --fix --allow-dirty",
			"presentation": {
				"clear": true,
				"reveal": "silent", //process does not switch terminal (focus on program output)
			}
		},
		{
			"label": "CLIPPY CHECK",
			"type": "shell",
			"dependsOn": [
				"CLIPPY FIX",
			],
			"isBackground": true,
			"command": "cargo clippy --manifest-path ./crates/Cargo.toml --no-deps -- -D warnings",
			"presentation": {
				"clear": true,
				"reveal": "silent", //process does not switch terminal (focus on program output)
			}
		},
		{
			"label": "RUSTFMT CHECK",
			"type": "shell",
			"group": "build",
			"isBackground": true,
			"command": "cargo fmt --manifest-path ./crates/Cargo.toml --all -- --check",
			"presentation": {
				"clear": true,
				"reveal": "silent", //process does not switch terminal (focus on program output)
			}
		},
		{
			"label": "BUILD BOOK",
			"group": "build",
			"type": "shell",
			"isBackground": true,
			"command": "mdbook build ./docs/ --open",
			"presentation": {
				"clear": true,
				"reveal": "never", //process does not switch terminal (focus on program output)
			},
		},
		{
			"label": "CREATE INOX FOLDER IN ADDON FOLDER",
			"type": "shell",
			"isBackground": true,
			"command": "New-Item -ItemType Directory -Force -Path ${env:BLENDER_ADDONS_PATH}\\INOX\\",
			"presentation": {
				"clear": true,
				"reveal": "never", //process does not switch terminal (focus on program output)
			},
		},
		{
			"label": "RENAME BLENDER DEBUG DLL IN ADDON FOLDER",
			"type": "shell",
			"dependsOn": [
				"CREATE INOX FOLDER IN ADDON FOLDER",
			],
			"isBackground": true,
			"command": "Copy-Item -Path ${workspaceFolder}\\crates\\target\\debug\\inox_blender.dll -Destination ${env:BLENDER_ADDONS_PATH}\\INOX\\inox_blender.pyd -Force",
			"presentation": {
				"clear": true,
				"reveal": "never", //process does not switch terminal (focus on program output)
			},
		},
		{
			"label": "COPY ADDON IN BLENDER",
			"group": "build",
			"type": "shell",
			"dependsOn": [
				"RENAME BLENDER DEBUG DLL IN ADDON FOLDER",
			],
			"isBackground": true,
			"command": "Copy-Item -Path ${workspaceFolder}\\crates\\blender\\inox_blender\\INOX -Destination ${env:BLENDER_ADDONS_PATH} -Force -Recurse",
			"presentation": {
				"clear": true,
				"reveal": "never", //process does not switch terminal (focus on program output)
			},
		},
		{
			"label": "CLEANUP",
			"type": "shell",
			"isBackground": true,
			"command": "Remove-Item -Path ${workspaceFolder}\\crates\\target\\debug\\in_use\\* -Recurse -Force",
			"presentation": {
				"clear": true,
				"reveal": "never", //process does not switch terminal (focus on program output)
			}
		},
		{
			"label": "CREATE IN_USE FOLDER",
			"type": "shell",
			"isBackground": true,
			"command": "New-Item -Path ${workspaceFolder}\\crates\\target\\debug\\ -Force -Name in_use -ItemType directory",
			"presentation": {
				"clear": true,
				"reveal": "never", //process does not switch terminal (focus on program output)
			}
		},
		{
			"label": "CREATE DEPS IN_USE FOLDER",
			"type": "shell",
			"isBackground": true,
			"command": "New-Item -Path ${workspaceFolder}\\crates\\target\\debug\\in_use\\ -Force -Name deps -ItemType directory",
			"presentation": {
				"clear": true,
				"reveal": "never", //process does not switch terminal (focus on program output)
			}
		},
		{
			"label": "COMPILE DEBUG",
			"args": [
				"build",
				"--manifest-path",
				"./crates/Cargo.toml",
			],
			"command": "cargo",
			"problemMatcher": [
				{
					"owner": "rust",
					"fileLocation": [
						"relative",
						"${workspaceRoot}"
					],
					"pattern": {
						"regexp": "^(.*):(\\d+):(\\d+):\\s+(\\d+):(\\d+)\\s+(warning|error):\\s+(.*)$",
						"file": 1,
						"line": 2,
						"column": 3,
						"endLine": 4,
						"endColumn": 5,
						"severity": 6,
						"message": 7
					}
				}
			],
			"presentation": {
				"clear": true,
			}
		},
		{
			"label": "COMPILE RELEASE",
			"args": [
				"build",
				"--manifest-path",
				"./crates/Cargo.toml",
				"--release"
			],
			"command": "cargo",
			"problemMatcher": [
				{
					"owner": "rust",
					"fileLocation": [
						"relative",
						"${workspaceRoot}"
					],
					"pattern": {
						"regexp": "^(.*):(\\d+):(\\d+):\\s+(\\d+):(\\d+)\\s+(warning|error):\\s+(.*)$",
						"file": 1,
						"line": 2,
						"column": 3,
						"endLine": 4,
						"endColumn": 5,
						"severity": 6,
						"message": 7
					}
				}
			],
			"presentation": {
				"clear": true,
			}
		},
		{
			"label": "COMPILE RELEASE WASM",
			"args": [
				"build",
				"--manifest-path",
				"./crates/Cargo.toml",
				"--release",
				"--target",
				"wasm32-unknown-unknown",
				"RUSTFLAGS=--cfg=web_sys_unstable_apis"
			],
			"command": "cargo",
			"problemMatcher": [
				{
					"owner": "rust",
					"fileLocation": [
						"relative",
						"${workspaceRoot}"
					],
					"pattern": {
						"regexp": "^(.*):(\\d+):(\\d+):\\s+(\\d+):(\\d+)\\s+(warning|error):\\s+(.*)$",
						"file": 1,
						"line": 2,
						"column": 3,
						"endLine": 4,
						"endColumn": 5,
						"severity": 6,
						"message": 7
					}
				}
			],
			"presentation": {
				"clear": true,
			}
		},
		{
			"label": "WASM BINDGEN",
			"args": [
				"--target",
				"web"
			],
			"command": "wasm-bindgen",
			"dependsOn": [
				"COMPILE RELEASE WASM",
			],
			"problemMatcher": [
				{
					"owner": "rust",
					"fileLocation": [
						"relative",
						"${workspaceRoot}"
					],
					"pattern": {
						"regexp": "^(.*):(\\d+):(\\d+):\\s+(\\d+):(\\d+)\\s+(warning|error):\\s+(.*)$",
						"file": 1,
						"line": 2,
						"column": 3,
						"endLine": 4,
						"endColumn": 5,
						"severity": 6,
						"message": 7
					}
				}
			],
			"presentation": {
				"clear": true,
			}
		},
		{
			"label": "BUILD DEBUG",
			"group": "build",
			"isBackground": true,
			"dependsOn": [
				"CREATE IN_USE FOLDER",
				"CREATE DEPS IN_USE FOLDER",
				"COMPILE DEBUG",
				"COPY ADDON IN BLENDER",
			],
			"problemMatcher": [],
			"presentation": {
				"clear": true,
				"reveal": "never", //process does not switch terminal (focus on program output)
			}
		},
		{
			"label": "BUILD RELEASE",
			"group": "build",
			"isBackground": true,
			"dependsOn": [
				"CREATE IN_USE FOLDER",
				"CREATE DEPS IN_USE FOLDER",
				"COMPILE RELEASE",
				"COPY ADDON IN BLENDER",
			],
			"problemMatcher": [],
			"presentation": {
				"clear": true,
				"reveal": "never", //process does not switch terminal (focus on program output)
			},
		},
		{
			"label": "BUILD RELEASE WASM",
			"group": "build",
			"isBackground": true,
			"dependsOn": [
				"WASM BINDGEN",
			],
			"problemMatcher": [],
			"presentation": {
				"clear": true,
				"reveal": "never", //process does not switch terminal (focus on program output)
			},
		}
	]
}